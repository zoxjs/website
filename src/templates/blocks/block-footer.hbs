<footer class="primary pad-md">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <p>{{copyright}}</p>
            </div>
            <div class="col-sm-8 footer-links">
                <div class="row">
                    {{#each linkGroups}}
                        <div class="col-sm-6">
                            <h4>{{title}}</h4>
                            <ul>
                                {{#each links}}
                                    <li><a href="{{url}}">{{title}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</footer>